<div class='row'>
	<div class='large-9 columns large-offset-2'>
		<h1>Set your password</h1>
	</div>
</div>
<div class='row'>
	<div class='large-3 columns large-offset-2'>
		<h1>Choose a new password</h1>
		<%= form_for @user, html: { autocomplete: :off } do |f| %>
			<p>
				<%= f.label :password %>
				<%= f.text_field :password %>
			</p>
			<p>
				<%= f.label :password_confirmation %>
				<%= f.text_field :password_confirmation %>
			<p>
				<%= f.submit 'Save password', class: 'button alert'%>
			</p>
			<% end %>
		</p>
	</div>
	<div class='large-7 columns'>
		<div class='progress large-6 strength-meter'>
			<span class='meter w-0' style='width: 0%'></span>
		</div>
	</div>
</div>

<script type="text/javascript" src='/js/zxcvbn.js'></script>